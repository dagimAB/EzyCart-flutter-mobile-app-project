# Example .env file for reference (do NOT commit secrets)
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your_auth_domain_here
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_STORAGE_BUCKET=your_storage_bucket_here
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
FIREBASE_APP_ID=your_app_id_here
GOOGLE_CLIENT_ID=your_google_client_id_here

# Google Gemini (Generative AI)
# Copy these keys into a local .env (do NOT commit your real .env file)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
USE_BEARER=false

# Optional fallback (OpenAI)
# OpenAI fallback removed by request â€” leave these blank
OPENAI_API_KEY=
OPENAI_MODEL=

# Force local-only assistant (set to true to disable remote calls and use the deterministic local assistant)
AI_FORCE_LOCAL=true
